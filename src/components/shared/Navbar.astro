---
import { CartCounter } from "../cart/CartCounter"

const { isLoggedIn, user, isAdmin } = Astro.locals
---

<nav
  style="background-color: #f9f9f9;"
  class="flex justify-between px-20 py-10 items-center fixed top-0 w-full z-10 h-20 shadow"
>
  <h1 class="text-xl text-gray-800 font-bold">
    <a href="/">Astro MiniStore</a>
  </h1>
  <div class="flex items-center">
    <ul class="flex items-center space-x-6">
      <CartCounter />
      <li class="font-semibold text-gray-700">
        <a href="/">Home</a>
      </li>
      {
        isAdmin && (
          <li class="font-semibold text-gray-700">
            <a href="/admin/dashboard">Admin</a>
          </li>
        )
      }

      {
        !isLoggedIn ? (
          <li class="font-semibold text-gray-700">
            <a href="/login">Ingresar</a>
          </li>
        ) : (
          <li
            id="logout"
            class="font-semibold text-gray-700"
          >
            <a href="#">Salir</a>
          </li>
        )
      }
    </ul>
  </div>
</nav>

<script>
  const { signOut } = await import("auth-astro/client")
  const logoutElem = document.querySelector("#logout") as HTMLLIElement

  logoutElem?.addEventListener("click", async () => {
    await signOut()
    window.location.href = "/"
  })
</script>
